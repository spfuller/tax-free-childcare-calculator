{
  "name": "tax-free-childcare-calculator",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test:watch": "ng test --watch",
    "test:coverage": "ng test --no-watch --code-coverage",
    "test:ci": "ng test --no-watch",
    "deploy": "ng deploy --base-href=/tax-free-childcare-calculator/",
    "format": "prettier --write ."
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "crlf",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.13.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^13.0.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.9",
    "@angular/cli": "^20.3.9",
    "@angular/compiler-cli": "^20.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "angular-cli-ghpages": "^2.0.3",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "vitest": "^3.2.4"
  }
}
